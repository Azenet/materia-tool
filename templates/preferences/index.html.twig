{% extends 'base.html.twig' %}

{% block title %}Account preferences{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h3>Account preferences</h3>
				<hr />
			</div>
		</div>

		<div class="row">
			<div class="col">
				{{ form_start(form) }}
				{{ form_rest(form) }}
				<button type="submit" class="btn btn-primary">Save</button>
				{{ form_end(form) }}
			</div>
		</div>

		<div class="row mt-5">
			<div class="col">
				<hr />
				<a href="{{ path('preferences_delete') }}" class="btn btn-danger">Delete my account</a>
			</div>
		</div>
	</div>
{% endblock %}
